<%- include("header") -%>
<div class="box" id="heading">
    <h1> <%= listType %></h1>
</div>

<!-- list of items in the list -->
<div class="box">
    <% for (var item of newItemList) { %>
    <div class="item">
        <input type="checkbox">
        <p><%= item %></p>
    </div>
    <% } %>

    <form class="item" action="/" method="POST">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="listButton" value=<%= listType %>>+</button>
    </form>
</div>

<%- include("footer") -%>